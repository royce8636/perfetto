{
  "name": "Perfetto UI",
  "description": "Enables the Perfetto trace viewer (https://ui.perfetto.dev) to record Chrome browser traces.",
  "version": "0.0.0.2",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "debugger"
  ],
  "icons": {
    "128": "logo-128.png"
  },
  "background": {
    "scripts": [
      "chrome_extension_bundle.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.perfetto.local/*",
      "*://*.perfetto.dev/*",
      "*://*-dot-perfetto-ui.appspot.com/*"
    ]
  }
}